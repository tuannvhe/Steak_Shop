    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        // var chartData = @Html.Raw(Json.Serialize(ViewData["ChartData"]));
        // var bigData = @Html.Raw(Json.Serialize(ViewData["bigData"]));
        var chartData = [0, 10, 20, 30, 40];
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line', // để vẽ đường
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'], // label ngang
                datasets: [{
                    data: chartData, // giá trị dọc
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true // bắt đầu từ 0
                        }
                    }]
                }
            }
        });
        var ctx1 = document.getElementById('myBarChart').getContext('2d');
        var barChart = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
                datasets: [
                    {
                        data: chartData
                    }
                ]
            }
        });

        var ctx2 = document.getElementById('myChart1').getContext('2d');
        var myChart1 = new Chart(ctx2, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    data: []
                }]
            }
        });

        //Interaction count
        var ctx3 = document.getElementById('CommentChart').getContext('2d');
        var CommentChart = new Chart(ctx3, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    data: []
                }]
            }
        });
        var ctx4 = document.getElementById('LoginChart').getContext('2d');
        var LoginChart = new Chart(ctx4, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    data: []
                }]
            }
        });

        $('.dropdown-item').click(function () {
            var id = $(this).attr('id');

            $.ajax({
                url: "/Chart/GetData",
                method: "POST",
                data: { id: id },
                success: function (response) {
                    var Data0 = response.data0;
                    var Data1 = response.data1; // gán dữ liệu vào biến
                    var Data2 = response.data2; // gán dữ liệu vào biến
                    var Data3 = response.data3;
                    var Data4 = response.data4;
                    var Data5 = response.data5;
                    var Data6 = response.data6;
                    var Data7 = response.data7;
                    var Data8 = response.data8;
                    var Data9 = response.data9;
                    var Data10 = response.data10;
                    var Data11 = response.data11;
                    var Data12 = response.data12;
                    var Data13 = response.data13;
                    var Data14 = response.data14;

                    myChart.data.datasets[0].data = Data1;
                    myChart.data.labels = Data2;
                    barChart.data.datasets[0].data = Data3;
                    barChart.data.labels = Data2;
                    myChart1.data.datasets[0].data = Data5;
                    myChart1.data.labels = Data4;
                    CommentChart.data.datasets[0].data = Data9;
                    CommentChart.data.labels = Data11;
                    LoginChart.data.datasets[0].data = Data12;
                    LoginChart.data.labels = Data13;

                    var today = new Date();
                    document.getElementById("stylingText").innerText = Data0 + "---------------------------" + today;
                    document.getElementById("stylingText1").innerText = Data0 + "---------------------------" + today;
                    document.getElementById("stylingText2").innerText = Data0 + "---------------------------" + today;
                    document.getElementById("stylingText3").innerText = Data0 + "---------------------------" + today;
                    document.getElementById("stylingText4").innerText = Data0 + "---------------------------" + today;

                    document.getElementById("TotalRevenue").innerText = Data6;
                    document.getElementById("NumOfOrders").innerText = Data7;
                    document.getElementById("NumOfFoods").innerText = Data8;
                    document.getElementById("NumOfComments").innerText = Data10;
                    document.getElementById("NumOfLogins").innerText = "Returning Customer Rate: "+ Data14+"%";

                    myChart.update();
                    barChart.update();
                    myChart1.update();
                    CommentChart.update();
                    LoginChart.update()
                }
            });
        });

    </script>
