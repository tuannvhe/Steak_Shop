@model IEnumerable<SteakShop.Models.Cart>
@{

}
<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">My Cart</h3>                   
                </div>

                <div class="card rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="row d-flex justify-content-between align-items-center">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="@item.Food.Image"
                                         class="img-fluid rounded-3" alt="">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2"> @item.Food.FoodName</p>
                                    @* <p><span class="text-muted"> @item.Food.CIdNavigation.CategoryName</span><span class="text-muted"></span></p> *@
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button class="btn btn-link px-2 decrease-quantity" data-cartid="@item.Id">
                                        <i class="fas fa-minus"></i>
                                    </button>

                                    <input id="form1" min="0" name="quantity" value="@item.Quantity" type="number"
                                           class="form-control form-control-sm quantity-input" data-cartid="@item.Id" />

                                    <button class="btn btn-link px-2 increase-quantity" data-cartid="@item.Id">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0"> @Math.Round(item.Food.Price * item.Quantity, 2)</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                @* <div class="card mb-4">
                    <div class="card-body p-4 d-flex flex-row">
                        <div class="form-outline flex-fill">
                            <input type="text" id="form1" class="form-control form-control-lg" />
